<h1>Create an Account</h1>
<p>Fill out the form below to make your account and get started with Tandem!</p>

<%= render partial: '/layouts/flash_message_center' %>

<%= form_for @user do |f| %>
<table>

<%= render partial: 'form', locals: { f: f } %>

<tr>
    <td class="col-1">
        <%= f.label :password %>
    </td>

    <td class="textbox">
        <%= f.password_field :password %>
    </td>
</tr>

<tr>
    <td class="col-1">
        <%= f.label :password_confirmation %>
    </td>

    <td class="textbox">
        <%= f.password_field :password_confirmation %>
    </td>
</tr>
   
</table>
 <%= f.submit "Create Account" %>
<% end %>

<%= link_to "Already have an account? Log in here.", login_path %>