<h1>All Tasks</h1>

<table>
<tr>
<th></th>
<th>Task</th>
<th>Project</th>
<th>Deadline</th>
</tr>

<% @tasks.each do |t| %>
  <tr>
    <td>
    <%= link_to "Edit", edit_project_task_path(t.project, t) %>
    </td>

    <td>
    <%= t.content %>
    </td>

    <td>
    <%= link_to t.project.title, project_path(t.project) %> 
    </td>

    <td>
    <% if t.deadline %>
      <%= t.human_time%>
    <% end %>
    </td>
  </tr>
<% end %>

</table>

