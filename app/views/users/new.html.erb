<h1>Create an Account</h1>
<p>Fill out the form below to make your account and get started with Tandem!</p>

<%= form_for @user do |f| %>
<table>
<tr>
    <td class="col-1">
        <%= f.label :email %>
    </td>

    <td class="textbox">
        <%= f.text_field :email %>
    </td>
</tr>

<tr>
    <td class="col-1">
        <%= f.label :first_name %>
    </td>

    <td class="textbox">
        <%= f.text_field :first_name %>
    </td>
</tr>

<tr>
    <td class="col-1">
        <%= f.label :last_name %>
    </td>

    <td class="textbox">
        <%= f.text_field :last_name %>
    </td>
</tr>

<tr>
    <td class="col-1">
        <%= f.label :time_zone %>
    </td>

    <td class="textbox">
        <%= f.time_zone_select :time_zone %>
    </td>
</tr>

<tr>
    <td class="col-1">
        <%= f.label :password %>
    </td>

    <td class="textbox">
        <%= f.password_field :password %>
    </td>
</tr>

<tr>
    <td class="col-1">
        <%= f.label :password_confirmation %>
    </td>

    <td class="textbox">
        <%= f.password_field :password_confirmation %>
    </td>
</tr>
   
</table>
 <%= f.submit "Create Account" %>
<% end %>

<%= link_to "Already have an account? Log in here.", login_path %>